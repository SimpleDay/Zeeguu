<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">


    <RelativeLayout
        android:id="@+id/relativeLayout_text_from"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="start|center_vertical">

        <EditText
            android:id="@+id/edit_text_language_from"
            style="@style/searchInputEditFields.landscape"
            android:layout_gravity="end|top"
            android:contentDescription="@string/content_description_text_from"
            android:imeOptions="actionSearch" />

        <ImageView
            android:id="@+id/ic_flag_translate_from"
            style="@style/flagImageView"
            android:layout_alignEnd="@+id/edit_text_language_from"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/edit_text_language_from"
            android:layout_gravity="center_horizontal|bottom"
            android:contentDescription="@string/content_description_flag_from"
            android:src="@drawable/flag_german" />

        <ImageView
            android:id="@+id/btn_paste"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btn_microphone_search"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/content_description_paste"
            android:src="?attr/customIconPaste" />

        <ImageView
            android:id="@+id/btn_microphone_search"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ic_flag_translate_from"
            android:layout_gravity="end"
            android:layout_toEndOf="@+id/btn_paste"
            android:layout_toRightOf="@+id/btn_paste"
            android:clickable="true"
            android:contentDescription="@string/content_description_microphone"
            android:src="?attr/customIconVoice"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/btn_camera_search"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/btn_microphone_search"
            android:layout_gravity="end"
            android:layout_toEndOf="@+id/btn_microphone_search"
            android:layout_toRightOf="@+id/btn_microphone_search"
            android:clickable="true"
            android:contentDescription="@string/content_description_camera"
            android:src="?attr/customIconCamera"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/btn_tts_language_from"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ic_flag_translate_from"
            android:layout_toLeftOf="@+id/ic_flag_translate_from"
            android:layout_toStartOf="@+id/ic_flag_translate_from"
            android:contentDescription="@string/content_description_tts_from"
            android:src="?attr/customIconSound" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_center_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical">


        <TextView
            android:id="@+id/btn_translate"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="58dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:text="@string/text_view_translate_button"
            android:textColor="@color/translation_language_textfield"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_text_to"
        android:layout_width="255dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end|center_vertical">

        <EditText
            android:id="@+id/edit_text_language_to"
            style="@style/searchInputEditFields.landscape"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="@string/content_description_text_to" />

        <ImageView
            android:id="@+id/ic_flag_translate_to"
            style="@style/flagImageView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_gravity="end|bottom"
            android:contentDescription="@string/content_description_flag_to"
            android:src="@drawable/flag_uk" />

        <ImageView
            android:id="@+id/btn_copy"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btn_bookmark"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/content_description_copy"
            android:enabled="false"
            android:src="?attr/customIconCopy" />

        <ImageView
            android:id="@+id/btn_bookmark"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/btn_tts_language_to"
            android:layout_toEndOf="@+id/btn_copy"
            android:layout_toRightOf="@+id/btn_copy"
            android:contentDescription="@string/content_description_bookmark"
            android:src="@drawable/btn_bookmark" />

        <ImageView
            android:id="@+id/btn_tts_language_to"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ic_flag_translate_to"
            android:layout_toLeftOf="@+id/ic_flag_translate_to"
            android:layout_toStartOf="@+id/ic_flag_translate_to"
            android:contentDescription="@string/content_description_tts_to"
            android:src="?attr/customIconSound" />

    </RelativeLayout>

</RelativeLayout>


