<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <FrameLayout
        android:id="@+id/text_native_translation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_button_layout"
        android:layout_alignParentTop="true"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_vertical">

            <EditText
                android:id="@+id/text_native_translation_user_entered"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|top"
                android:background="@drawable/rounded_textfield"
                android:gravity="top"
                android:imeOptions="actionSearch"
                android:maxLines="10"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/flag_translate_from"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/text_native_translation_user_entered"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/flag_german" />

            <ImageView
                android:id="@+id/microphone_search_button"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/flag_translate_from"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:src="?attr/customIconVoice"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/camera_search_button"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/microphone_search_button"
                android:layout_gravity="right"
                android:layout_toEndOf="@+id/microphone_search_button"
                android:layout_toRightOf="@+id/microphone_search_button"
                android:clickable="true"
                android:src="?attr/customIconCamera"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/button_read_to_user_native_language"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/camera_search_button"
                android:layout_toEndOf="@+id/camera_search_button"
                android:layout_toRightOf="@+id/camera_search_button"
                android:src="?attr/customIconSound" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical">

            <EditText
                android:id="@+id/text_translated"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/rounded_textfield"
                android:clickable="false"
                android:focusable="false"
                android:gravity="top"
                android:inputType="text"
                android:maxLines="10"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/flag_translate_to"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/flag_uk" />

            <ImageView
                android:id="@+id/button_bookmark"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/flag_translate_to"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_star_halo_light" />

            <ImageView
                android:id="@+id/button_read_to_user_learning_language"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/button_bookmark"
                android:layout_toEndOf="@+id/button_bookmark"
                android:layout_toRightOf="@+id/button_bookmark"
                android:src="?attr/customIconSound" />

        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/image_button_layout"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageButton
            android:id="@+id/translate_button"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:src="?attr/customIconTranslate" />


        <ImageButton
            android:id="@+id/contribute_to_server"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_toLeftOf="@+id/translate_button"
            android:layout_toStartOf="@+id/translate_button"
            android:background="@drawable/rounded_button"
            android:clickable="true"
            android:src="?attr/customIconSave" />

    </RelativeLayout>

</RelativeLayout>


