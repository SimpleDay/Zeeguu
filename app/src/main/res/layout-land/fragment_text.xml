<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <FrameLayout
        android:id="@+id/text_native_translation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_vertical">

            <EditText
                android:id="@+id/text_native"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|top"
                android:background="@drawable/rounded_textfield"
                android:gravity="top"
                android:imeOptions="actionSearch"
                android:maxLines="10"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/ic_flag_translate_from"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/text_native"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/flag_german" />

            <ImageView
                android:id="@+id/btn_microphone_search"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/ic_flag_translate_from"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:src="?attr/customIconVoice"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/btn_camera_search"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/btn_microphone_search"
                android:layout_gravity="right"
                android:layout_toEndOf="@+id/btn_microphone_search"
                android:layout_toRightOf="@+id/btn_microphone_search"
                android:clickable="true"
                android:src="?attr/customIconCamera"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/btn_tts_native_language"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/btn_camera_search"
                android:layout_toEndOf="@+id/btn_camera_search"
                android:layout_toRightOf="@+id/btn_camera_search"
                android:src="?attr/customIconSound" />

            <ImageView
                android:id="@+id/btn_paste"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/ic_flag_translate_from"
                android:layout_alignStart="@+id/ic_flag_translate_from"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:alpha=".3"
                android:src="?attr/customIconPaste" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical">

            <EditText
                android:id="@+id/text_translated"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/rounded_textfield"
                android:clickable="false"
                android:focusable="false"
                android:gravity="top"
                android:inputType="text"
                android:maxLines="10"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/ic_flag_translate_to"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/flag_uk" />

            <ImageView
                android:id="@+id/btn_contribute"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/ic_flag_translate_to"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/btn_star_holo_light" />

            <ImageView
                android:id="@+id/btn_tts_learning_language"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/btn_contribute"
                android:layout_toEndOf="@+id/btn_contribute"
                android:layout_toRightOf="@+id/btn_contribute"
                android:src="?attr/customIconSound" />

            <ImageView
                android:id="@+id/btn_copy"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@+id/ic_flag_translate_to"
                android:layout_alignRight="@+id/ic_flag_translate_to"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:alpha=".3"
                android:src="?attr/customIconCopy" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_translate"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button"
                android:src="?attr/customIconTranslate" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>


