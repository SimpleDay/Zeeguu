<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="category_login"
        android:title="@string/category_login_settings">

        <EditTextPreference
            android:inputType="textEmailAddress"
            android:key="@string/preference_email"
            android:summary="@string/email_info"
            android:title="@string/email" />

        <EditTextPreference
            android:inputType="textPassword"
            android:key="@string/preference_password"
            android:summary="@string/password_info"
            android:title="@string/password" />

        <EditTextPreference
            android:key="@string/preference_user_session_id"
            android:selectable="false"
            android:title="@string/user_session_id"
            android:summary="@string/unknown"/>

    </PreferenceCategory>


    <PreferenceCategory
        android:key="category_main_settings"
        android:title="@string/category_main_settings">

        <ListPreference
            android:key="learning_language"
            android:title="@string/learning_language"
            android:dialogTitle="@string/learning_language_dialog"
            android:entries="@array/choosable_languages"
            android:entryValues="@array/choosable_languages_keys"
            android:defaultValue="@string/default_language" />

        <ListPreference
            android:key="native_language"
            android:title="@string/native_language"
            android:dialogTitle="@string/native_language_dialog"
            android:entries="@array/choosable_languages"
            android:entryValues="@array/choosable_languages_keys"
            android:defaultValue="@string/default_language" />


    </PreferenceCategory>


    <PreferenceCategory
        android:key="category_app_settings"
        android:title="@string/category_app_settings">

        <ListPreference
            android:key="app_language"
            android:title="@string/app_language"
            android:dialogTitle="@string/app_language_dialog"
            android:entries="@array/choosable_languages"
            android:entryValues="@array/choosable_languages_keys"
            android:defaultValue="@string/default_language" />

        <ListPreference
            android:key="app_design"
            android:title="@string/app_design"
            android:dialogTitle="@string/app_design_dialog"
            android:entries="@array/choosable_themes"
            android:entryValues="@array/choosable_themes_keys"
            android:defaultValue="@string/default_language" />

    </PreferenceCategory>


</PreferenceScreen>