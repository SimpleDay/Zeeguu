<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relativeLayout_text_to_translate"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="0.4">


            <EditText
                android:id="@+id/text_native"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_textfield"
                android:gravity="top"
                android:imeOptions="actionSearch"
                android:maxLines="8"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/ic_flag_translate_from"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/text_native"
                android:layout_alignEnd="@+id/text_native"
                android:layout_alignRight="@+id/text_native"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="15dp"
                android:gravity="top" />

            <ImageView
                android:id="@+id/btn_microphone_search"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/btn_camera_search"
                android:layout_gravity="left"
                android:layout_toEndOf="@+id/btn_paste"
                android:layout_toRightOf="@+id/btn_paste"
                android:clickable="true"
                android:src="?attr/customIconVoice" />

            <ImageView
                android:id="@+id/btn_camera_search"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/ic_flag_translate_from"
                android:layout_gravity="left"
                android:layout_toEndOf="@+id/btn_microphone_search"
                android:layout_toRightOf="@+id/btn_microphone_search"
                android:clickable="true"
                android:src="?attr/customIconCamera" />

            <ImageView
                android:id="@+id/btn_tts_native_language"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/ic_flag_translate_from"
                android:layout_toLeftOf="@+id/ic_flag_translate_from"
                android:layout_toStartOf="@+id/ic_flag_translate_from"
                android:src="?attr/customIconSound" />

            <ImageView
                android:id="@+id/btn_paste"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/text_native"
                android:layout_alignStart="@+id/text_native"
                android:layout_alignTop="@+id/btn_microphone_search"
                android:layout_marginLeft="10dp"
                android:src="?attr/customIconPaste" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ic_menu_middle_layout"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:layout_weight="0.2" >


            <TextView
                android:id="@+id/btn_translate"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="41dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:text="@string/text_view_translate_button"
                android:textColor="@color/translation_language_textfield"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_text_translated"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight=".4">

            <EditText
                android:id="@+id/text_translated"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_textfield"
                android:clickable="false"
                android:focusable="false"
                android:gravity="top"
                android:maxLines="8"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/ic_flag_translate_to"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/text_translated"
                android:layout_alignEnd="@+id/text_translated"
                android:layout_alignRight="@+id/text_translated"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="15dp"
                android:gravity="top" />

            <ImageView
                android:id="@+id/btn_contribute"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/ic_flag_translate_to"
                android:layout_toEndOf="@+id/btn_copy"
                android:layout_toRightOf="@+id/btn_copy"
                android:src="@drawable/btn_bookmark" />

            <ImageView
                android:id="@+id/btn_tts_learning_language"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/ic_flag_translate_to"
                android:layout_toLeftOf="@+id/ic_flag_translate_to"
                android:layout_toStartOf="@+id/ic_flag_translate_to"
                android:src="?attr/customIconSound" />

            <ImageView
                android:id="@+id/btn_copy"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/text_translated"
                android:layout_alignStart="@+id/text_translated"
                android:layout_alignTop="@+id/btn_contribute"
                android:layout_marginLeft="10dp"
                android:enabled="false"
                android:src="?attr/customIconCopy" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_text_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="205dp"
            android:text="You can swipe left and right to switch between the windows" />

    </RelativeLayout>
</FrameLayout>