<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
    </style>

    <style name="AppThemeLightActionbarDark" parent="AppTheme">
        <item name="customIconText">@drawable/ic_action_edit_holo_light</item>
        <item name="customIconVoice">@drawable/btn_mic_holo_light</item>
        <item name="customIconCamera">@drawable/btn_camera_holo_light</item>
        <item name="customIconSettings">@drawable/ab_settings_holo_dark</item>
        <item name="customIconSave">@drawable/btn_bookmark_holo_light</item>
        <item name="customIconSound">@drawable/btn_tts_holo_light</item>
        <item name="customIconPaste">@drawable/btn_paste_holo_light</item>
        <item name="customIconCopy">@drawable/btn_copy_holo_light</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/red</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/darkred</item>

    </style>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="customIconText">@drawable/ic_action_edit_holo_light</item>
        <item name="customIconVoice">@drawable/btn_mic_holo_light</item>
        <item name="customIconCamera">@drawable/btn_camera_holo_light</item>
        <item name="customIconSettings">@drawable/ab_settings_holo_light</item>
        <item name="customIconSave">@drawable/btn_bookmark_holo_light</item>
        <item name="customIconSound">@drawable/btn_tts_holo_light</item>
        <item name="customIconPaste">@drawable/btn_paste_holo_light</item>
        <item name="customIconCopy">@drawable/btn_copy_holo_light</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/red</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/darkred</item>

    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="customIconText">@drawable/ic_action_edit_holo_dark</item>
        <item name="customIconVoice">@drawable/btn_mic_holo_dark</item>
        <item name="customIconCamera">@drawable/btn_camera_holo_dark</item>
        <item name="customIconSettings">@drawable/ab_settings_holo_dark</item>
        <item name="customIconSave">@drawable/btn_bookmark_holo_dark</item>
        <item name="customIconSound">@drawable/btn_tts_holo_dark</item>
        <item name="customIconPaste">@drawable/btn_paste_halo_dark</item>
        <item name="customIconCopy">@drawable/btn_copy_holo_dark</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/blue</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/blue</item>

    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>


</resources>
