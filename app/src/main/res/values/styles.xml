<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/zeeguu_red</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <!-- Remove shadow below action bar Android < 5.0 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Individualized themes -->
    <style name="AppThemeLightActionbarDark" parent="AppTheme">
        <item name="customIconVoice">@drawable/btn_mic_holo_light</item>
        <item name="customIconCamera">@drawable/btn_camera_holo_light</item>
        <item name="customIconSettings">@drawable/ab_settings_holo_dark</item>
        <item name="customIconSound">@drawable/btn_tts_holo_light</item>
        <item name="customIconPaste">@drawable/btn_paste_holo_light</item>
        <item name="customIconCopy">@drawable/btn_copy_holo_light</item>
    </style>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="customIconVoice">@drawable/btn_mic_holo_light</item>
        <item name="customIconCamera">@drawable/btn_camera_holo_light</item>
        <item name="customIconSettings">@drawable/ab_settings_holo_dark</item>
        <item name="customIconSound">@drawable/btn_tts_holo_light</item>
        <item name="customIconPaste">@drawable/btn_paste_holo_light</item>
        <item name="customIconCopy">@drawable/btn_copy_holo_light</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="customIconVoice">@drawable/btn_mic_holo_dark</item>
        <item name="customIconCamera">@drawable/btn_camera_holo_dark</item>
        <item name="customIconSettings">@drawable/ab_settings_holo_dark</item>
        <item name="customIconSound">@drawable/btn_tts_holo_dark</item>
        <item name="customIconPaste">@drawable/btn_paste_halo_dark</item>
        <item name="customIconCopy">@drawable/btn_copy_holo_dark</item>
    </style>

    <!-- input boxes themes -->
    <style name="searchInputEditFields" >
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/rounded_textfield</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">6</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="searchInputEditFields.normal">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="searchInputEditFields.landscape">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="flagImageView">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">top</item>
    </style>


</resources>
