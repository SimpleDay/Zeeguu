<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeLightActionbarDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="customIconText">@drawable/ic_action_edit_holo_light</item>
        <item name="customIconVoice">@drawable/btn_mic_holo_light</item>
        <item name="customIconCamera">@drawable/btn_camera_holo_light</item>
