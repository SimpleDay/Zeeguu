<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <size
                android:width="4dp"
                android:height="50dp" />
        </shape>
    </item>

    <!-- Arrow head left -->
    <item
        android:left="-120dp"
        android:right="120dp"
        android:top="20dp">
        <rotate
            android:fromDegrees="135"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/black" />
                <corners
                    android:bottomLeftRadius="0dp"
                    android:bottomRightRadius="0dp"
                    android:radius="1dp" />

            </shape>
        </rotate>
    </item>

    <item
        android:bottom="20dp"
        android:left="-120dp"
        android:right="120dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="135">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/black" />
                <corners
                    android:bottomLeftRadius="0dp"
                    android:bottomRightRadius="0dp"
                    android:radius="1dp" />
            </shape>
        </rotate>
    </item>


    <!-- Arrow head right-->
    <item
        android:bottom="20dp"
        android:left="120dp"
        android:right="-120dp">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/black" />
                <corners
                    android:bottomLeftRadius="0dp"
                    android:bottomRightRadius="0dp"
                    android:radius="1dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:left="120dp"
        android:right="-120dp"
        android:top="20dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/black" />
                <corners
                    android:radius="1dp"
                    android:topLeftRadius="0dp"
                    android:topRightRadius="0dp" />
            </shape>
        </rotate>
    </item>


    <!-- Arrow line-->
    <item>
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">
            <shape android:shape="line">
                <solid android:color="@android:color/black" />
            </shape>
        </rotate>
    </item>

</layer-list>



